<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Teachers Page</title>
  <style>
     /* .backbtn{
      margin-right: 0px;
     } */
  </style>
</head>
<body>
  <%- include('header') %>
  <!-- <h1 style="font-family: 'Times New Roman', Times, serif;">Student Records</h1> -->
  <a style="font-family: 'Times New Roman', Times, serif;" href="/teachers/addRecord"><button class="btn btn-primary">Add Record</button></a>
  <a style="font-family: 'Times New Roman', Times, serif;"  href="/"><button style="background-color: rgb(98, 57, 233);" class="backbtn btn btn-info">Back</button></a>
  <table class=" table table-borderless table-hover ">
    <thead>
      <tr>
        <th style="font-family: 'Times New Roman', Times, serif;">Roll Number</th>
        <th style="font-family: 'Times New Roman', Times, serif;">Name</th>
        <th style="font-family: 'Times New Roman', Times, serif;">Date of Birth</th>
        <th style="font-family: 'Times New Roman', Times, serif;">Score</th>
        <th style="font-family: 'Times New Roman', Times, serif;">Actions</th>
      </tr>
    </thead>
    <tbody>
     
      <% students.forEach(student => { %>
        <tr>
          <td style="font-family: 'Times New Roman', Times, serif;"><%= student.rollnumber %></td>
          <td style="font-family: 'Times New Roman', Times, serif;"><%= student.name %></td>
          <td style="font-family: 'Times New Roman', Times, serif;"><%= student.dateOfBirth.toDateString() %></td>
          <td style="font-family: 'Times New Roman', Times, serif;"><%= student.score %></td>
          <td>
            <a style="font-family: 'Times New Roman', Times, serif;" href="/teachers/edit/<%= student._id %>">Edit</a>
            <a style="font-family: 'Times New Roman', Times, serif;" href="/teachers/delete/<%= student._id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
